<%- include("partials/_header.ejs") %>
<main>
  <div id="actionMsg"><p><%= msg %></p></div>
    <div class="productDetailsDiv">
      <div>
        <h2 id="productDetailsHeader">Vill du ha en hälsning från <%= product.name %>?</h2>
        <img src="<%= product.image %>" alt="bild på <%= product.name %>"/>
        <a href="/shoppingCart/add/?id=<%= product.id %>" id="addToCart">Lägg till i varukorg</a>
        <a href="/wishList/add/?id=<%= product.id %>" id="addToWishList">Lägg till i favoriter</a>
        <p class="productPrice"><%= product.price %> KR</p>
        <p class="productDescription"><%= product.detailedDescription %></p>
        <a href="/products" id="linkToProducts">Ta mig till de andra kändisarna!</a>
      </div>
    </div>
</main>
<%- include("partials/_footer.ejs") %>